<%= form_for(@member) do |f| %>
  <%= f.label :name, "氏名" %>
  <%= f.text_field :name %>
  <BR>
  <% %w(ピッチャー キャッチャー ファースト セカンド サード ショート レフト センター ライト).each do |position| %>
    <%= f.label :position, position %>
    <%= f.check_box :position, {multiple: true}, position %>
  <% end %>

  <%= f.label :introduction, "選手紹介" %>
　<%= f.text_area :introduction, size: "77x5" %>

  <%= f.submit '新規登録', class: 'btn btn-primary button' %>

<% end %>